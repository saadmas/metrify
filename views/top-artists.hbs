<h3 class="page-heading metric-heading"> {{name}} Top Spotify Artists</h3>
<div class="row" id="top-artists-row">
  <div class="col">
    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
      <div class="btn-group mr-2" role="group" aria-label="Time Query" id="time-query-group">
        <button type="button" class="btn btn-outline-primary active active-time action-btn" id="long_term"
          data-toggle="button">
          All Time
        </button>
        <button type="button" class="btn btn-outline-primary action-btn" id="medium_term" data-toggle="button">
          Last 6 Months
        </button>
        <button type="button" class="btn btn-outline-primary action-btn" id="short_term" data-toggle="button">
          Last Month
        </button>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col" id="table-container">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col" class="rank-col-artist">Rank</th>
          <th scope="col">Name</th>
        </tr>
      </thead>
      <tbody>
        {{#each metricData}}
        <tr class="data-row artist-row" id={{spotifyID}}>
          <td class="artist-rank" scope="row" />
          <td>
            {{name}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<script type='text/javascript' src="scripts/top-artists.js"></script>